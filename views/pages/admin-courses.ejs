<!doctype html>
<html lang="en">
<head>
    <title>Courses | Admin | Codeshala | Get Better At Programing By Joining The Best programing courses in Delhi
        NCR</title>
    <% include ../partials/header %>
    <% include ../partials/metadata %>
</head>
<body>
<% include ../partials/nav %>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <% include ../partials/admin-menu %>
        </div>
        <div class="col-lg-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Admin Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/courses">View All Courses</a></li>
                </ol>
            </nav>
            <br/>
            <div class="card">
                <div class="card-header">
                    View All Courses
                </div>


                <div class="card-body">
                    <div class="row">

                        <% for(key in courses){ %>
                        <div class="card border-info" style="margin:10px;">
                            <div class="card-header"><%= courses[key].name %>
                                <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false"></a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">Edit</a>
                                    <a class="dropdown-item" href="#">Delete</a>
                                    <% if(courses[key].courseRegistrationStatus == "OPEN") { %>
                                    <a class="dropdown-item" href="#">Close Registrations</a>
                                    <% }else{ %>
                                    <a class="dropdown-item" href="#">Open Registrations</a>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card-body text-info">
                                <%= courses[key].courseRegistrationStatus %>
                                |
                                <%= courses[key].minsessions %> - <%= courses[key].maxsessions %> Sessions
                                <br/>

                            </div>
                        </div>
                        <% } %>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
</div>
<% include ../partials/footer %>
</body>

<% include ../partials/footer-scripts %>

</html>